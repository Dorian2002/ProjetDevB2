@model App.ViewModels.CreateArticle
@{
    ViewData["Title"] = "CreateArticle";
}



<div class="row">
    @using (Html.BeginForm("Create", "CreateArticle", FormMethod.Post))
    {
        <div class="col-md-4 mx-auto bg-dark text-white p-4 rounded">
            <h1>Create a new article</h1>
            <form method="post" runat="server">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea name="Description" rows="8" maxlength="1200" type="text" asp-for="Description" class="form-control" value=""></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Location">Complete Adress</label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Categories"></label>
                    <select multiple  asp-for="Categories" class="form-control" name="catogoryList" value asp-items="@ViewBag.Categories"></select>
                </div>
                <br>   

                <button style="width:auto" type="submit" class="btn btn-warning w-100">Create</button>
            </form>

        </div>
    }
</div>