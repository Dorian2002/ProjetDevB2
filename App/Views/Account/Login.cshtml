@model App.ViewModels.LoginRequest
@{
    ViewData["Title"] = "Login";
}


<div class="row ">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="col-md-3 mx-auto bg-dark text-white p-3 rounded">
            <h1 class="text-center">Login</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" ></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                        <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>

                </div>
                <br/>

                <button style="width:auto" type="submit" class="btn btn-warning w-100" >Login</button>
            </form>
        </div>
    }
</div>