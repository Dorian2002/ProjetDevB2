@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div>
        @foreach (Article item in @Model)
        {
            <div>
                <div class="card border-primary mb-3" style="max-width: 20rem;">
                    <div class="card-header">@item.Name</div>
                    <div class="card-body">
                        <img src="../../assets/images/defaultArticleImg.png" alt="Sample Photo" />
                    </div>
                    <div class="card-footer">
                        <p class="card-text">@item.Price €</p>
                        <div>
                            <a style="width:auto" type="button" class="btn btn-primary" asp-area="" asp-controller="Articles" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
